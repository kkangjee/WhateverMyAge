<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoveWriteArticle">


<LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#8BC34A"
    >
        <ImageButton
                android:id="@+id/bt_back"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/back"
                android:theme="@style/AppTheme.GreenRipple"
                android:background="?selectableItemBackground"
        />

        <TextView
                android:id="@+id/QuestionAnswerArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8BC34A"
                android:textSize="30dp"
                android:textColor="#fff"
                android:padding="10dp"
        />

    </LinearLayout>



    <EditText
            android:id="@+id/articleblank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="글을 작성해주세요."
            android:textSize="30dp"
    />


    <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/testimage"
            android:src="@drawable/dalbodre"
            android:layout_width="200dp"
            android:layout_height="200dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/raw"

    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/code"

    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body"

    />


</LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <Button
                android:id="@+id/lovearticlespicupload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진"
                android:textSize="20dp"
        />
        <Button
                android:id="@+id/lovearticlesvideoupload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동영상"
                android:textSize="20dp"
        />
        <Button
                android:id="@+id/lovearticlescancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안 쓸래요"
                android:textSize="20dp"
        />
        <Button
                android:id="@+id/lovearticlessubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다 썼어요"
                android:textSize="20dp"
        />




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>